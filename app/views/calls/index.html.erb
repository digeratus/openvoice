<h2>Communication Stream</h2>

<table>
  <tr class="header">
    <th>Time</th>
    <th>Type</th>
    <th>Number</th>
    <th/>
    <th/>
    <th/>
  </tr>

  <% @calls.each do |call| %>
      <tr align="center">
        <td><%= h call.date_for_stream %></td>
        <td><%= h call.class.name == "IncomingCall" ? "(I)" : "(O)" %></td>
        <td><%= h call.class.name == "IncomingCall" ? call.caller_id : call.callee_number %></td>
      </tr>
  <% end %>
</table>

<br/>
<%= will_paginate @calls %>
<br/>
