<!DOCTYPE html>
<meta charset="utf-8">

<head>
  <title>OpenVoice - <%= controller.controller_name %>:<%= controller.action_name %></title>
  <%= stylesheet_link_tag "openvoice" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "http://s.phono.com/releases/0.1/jquery.phono.js" %>
  <%= csrf_meta_tag %>
</head>

<body>
<div class="container">

  <div class="header">
    <div class="left">
      <div class="leftinnerleft"><%= image_tag("ov_logo.png", :size => "35x35") %></div>
      <div class="leftinnerright"><h1>OpenVoice</h1></div>
    </div>
    <div class="right">
      <% if current_user %>
        <div class="rightinnerovnumber">OpenVoice Number: <%= current_user.profiles.first.voice %></div>
        <div class="rightinnerlogout"><a class="special" href="/logout">logout</a></div>
      <% else %>
        <div class="rightinnerlogout"><a class="special" href="/users/new">Signup</a></div>      
      <% end %>
    </div>
  </div>
  
  <div>
    <div>
      <% unless current_user.nil? %>
          <%= link_to_unless_current "inbound calls", user_incoming_calls_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "outbound calls", user_outgoing_calls_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "messages", user_messagings_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "voicemails", user_voicemails_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "addressbook", user_contacts_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "phone numbers", user_phone_numbers_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "profile", user_profiles_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "fs_profile", user_fs_profiles_path(current_user), :class => 'special' %> |
          <%= link_to_unless_current "account", account_path, :class => 'special' %> |
      <% end %>
    </div>

    <% if flash[:error]  %>
    <div id="flash_error">
        <%= flash[:error] %>
    </div>
    <% end %>

    <% if flash[:notice]  %>
    <div id="flash_notice">
        <p><%= flash[:notice] %></p>
    </div>
    <% end %>
    
    <div>
      <%= yield %>
    </div>
  </div>

  <footer class="footer">Copyright 2010, Zhao Lu <a href="http://blog.myopenvoice.org">OpenVoice</a>.</footer>
</div>

</body>