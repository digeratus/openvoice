<h1>New Message</h1>

<% form_for([:user, @messaging]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= hidden_field_tag :contact_id,  %>
      <%= f.label :to %><br/>
      <%= f.autocomplete_field :to, autocomplete_contact_name_user_messagings_path, :id_element => '#contact_id' %>
    </p>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text, :rows => 4, :cols => 30 %>
    </p>
    <p>
      <%= f.submit 'Send' %>
    </p>
<% end %>

<%= link_to 'Back', user_messagings_path(current_user) %>